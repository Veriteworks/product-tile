<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="content">
            <block class="MageSuite\ProductTile\Block\Tile" name="product.tile">
                <arguments>
                    <argument xsi:type="string" name="html_tag">div</argument>
                    <argument xsi:type="string" name="css_class">cs-grid-product</argument>
                    <argument xsi:type="array" name="sections">
                        <item xsi:type="array" name="navigation">
                            <item xsi:type="string" name="css_class">cs-grid-product</item>
                        </item>
                    </argument>
                </arguments>

                <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.main">
                    <arguments>
                        <argument xsi:type="string" name="html_tag">div</argument>
                        <argument xsi:type="string" name="css_class">cs-grid-product__main</argument>
                    </arguments>

                    <block class="MageSuite\ProductTile\Block\Tile\Container"
                           name="product.tile.container.figure" 
                           template="MageSuite_ProductTile::container_linked.phtml"
                    >
                        <arguments>
                            <argument xsi:type="string" name="css_class">cs-grid-product__figure-wrapper</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.badges">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">ul</argument>
                                <argument xsi:type="string" name="css_class">cs-grid-product__badges</argument>
                            </arguments>

                            <!-- START: Move to DAILYDEAL (BADGE) -->
                            <block class="MageSuite\ProductTile\Block\Tile\Container" 
                                   name="product.tile.container.badge.el.dailydeal_badge" 
                                   before="-">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__badge cs-dailydeal__badge-wrapper</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.badge.daily-deal.badge"
                                       template="MageSuite_ProductTile::fragments/daily-deal/badge.phtml"
                                >
                                </block>
                            </block>
                            <!-- END: Move to DAILYDEAL (BADGE) -->

                            <!-- START: Move to DISCOUNT -->
                            <block class="MageSuite\ProductTile\Block\Tile\Container" 
                                   name="product.tile.container.badge.el.discount" 
                                   after="product.tile.container.badge.el.dailydeal_badge">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__badge</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.badge.discount"
                                       template="MageSuite_ProductTile::fragments/discount-badge.phtml"
                                >
                                    <arguments>
                                        <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Badge\Discount</argument>
                                        <argument xsi:type="string" name="css_class">cs-badge cs-badge--discount</argument>
                                        <argument xsi:type="string" name="value_prefix">-</argument>
                                        <argument xsi:type="string" name="value_suffix">%</argument>
                                    </arguments>
                                </block>
                            </block>
                            <!-- END: Move to DISCOUNT -->

                            <!-- START: Move to DAILYDEAL (OLD_DISCOUNT) -->
                            <block class="MageSuite\ProductTile\Block\Tile\Container" 
                                   name="product.tile.container.badge.el.old_discount"
                                   after="product.tile.container.badge.el.discount">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__badge cs-dailydeal__original-discount-badge</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.badge.daily-deal.old-discount"
                                       template="MageSuite_ProductTile::fragments/daily-deal/old_discount.phtml"
                                >
                                    <arguments>
                                        <argument xsi:type="string" name="css_class">cs-badge cs-badge--discount cs-badge--discount_old</argument>
                                        <argument xsi:type="string" name="value_prefix">-</argument>
                                        <argument xsi:type="string" name="value_suffix">%</argument>
                                    </arguments>
                                </block>
                            </block>
                            <!-- END: Move to DAILYDEAL (OLD_DISCOUNT) -->

                            <!-- START: Move to IS_NEW -->
                            <block class="MageSuite\ProductTile\Block\Tile\Container" 
                                   name="product.tile.container.badge.el.new"
                                   after="product.tile.container.badge.el.old_discount">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__badge</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.badge.new"
                                       template="MageSuite_ProductTile::fragments/label-badge.phtml"
                                >
                                    <arguments>
                                        <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Badge\IsNew</argument>
                                        <argument xsi:type="string" name="css_class">cs-badge cs-badge--new</argument>
                                        <argument translate="true" xsi:type="string" name="label">New</argument>
                                    </arguments>
                                </block>
                            </block>
                            <!-- END: Move to IS_NEW -->

                            <!-- START: Move to FREE_SHIPPING -->
                            <block class="MageSuite\ProductTile\Block\Tile\Container" 
                                   name="product.tile.container.badge.el.freeshipping"
                                   after="product.tile.container.badge.el.new">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__badge</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.badge.positive_indicators.free_shipping"
                                       template="MageSuite_ProductTile::fragments/indicator-badge.phtml"
                                >
                                    <arguments>
                                        <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Badge\PositiveIndicators\FreeShipping</argument>
                                        <argument xsi:type="string" name="css_class">cs-badge cs-badge--cut cs-badge--positive</argument>
                                        <argument translate="true" xsi:type="string" name="label">Free shipping</argument>
                                    </arguments>
                                </block>
                            </block>
                            <!-- END: Move to FREE_SHIPPING -->

                            <!-- START: Move to POPULAR -->
                            <block class="MageSuite\ProductTile\Block\Tile\Container" 
                                   name="product.tile.container.badge.el.popular"
                                   after="product.tile.container.badge.el.freeshipping">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__badge</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.badge.positive_indicators.popular"
                                       template="MageSuite_ProductTile::fragments/indicator-badge.phtml"
                                >
                                    <arguments>
                                        <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Badge\PositiveIndicators\Popular</argument>
                                        <argument xsi:type="string" name="css_class">cs-badge cs-badge--cut cs-badge--positive</argument>
                                        <argument translate="true" xsi:type="string" name="label">Popular</argument>
                                    </arguments>
                                </block>
                            </block>
                            <!-- START: Move to POPULAR -->
                        </block>

                        <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                               name="product.tile.daily-deal.counter"
                               template="MageSuite_ProductTile::fragments/daily-deal/counter.phtml"
                               after="-">
                            <arguments>
                                <argument xsi:type="string" translate="true" name="items_left_label">item(s) left</argument>
                                <argument xsi:type="array" name="countdown_labels">
                                    <item xsi:type="string" translate="true" name="day">Day</item>
                                    <item xsi:type="string" translate="true" name="days">Days</item>
                                    <item xsi:type="string" translate="true" name="hour">Hour</item>
                                    <item xsi:type="string" translate="true" name="hours">Hours</item>
                                    <item xsi:type="string" translate="true" name="minute">Min</item>
                                    <item xsi:type="string" translate="true" name="minutes">Min</item>
                                    <item xsi:type="string" translate="true" name="second">Sec</item>
                                    <item xsi:type="string" translate="true" name="seconds">Sec</item>
                                </argument>
                            </arguments>
                        </block>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.figure.figure">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">figure</argument>
                                <argument xsi:type="string" name="css_class">cs-grid-product__figure</argument>
                            </arguments>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                   name="product.tile.figure.image"
                                   template="MageSuite_ProductTile::fragments/image.phtml"
                            >
                                <arguments>
                                    <argument xsi:type="string" name="css_class">cs-grid-product__image</argument>
                                </arguments>
                            </block>
                        </block>
                    </block>


                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.swatches.container">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__swatches</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                               name="product.tile.swatches"
                               template="MageSuite_ProductTile::fragments/swatches.phtml"
                        >
                            <block class="Magento\Framework\View\Element\RendererList" name="product.tile.details.renderers" as="details.renderers">
                                <block class="Magento\Swatches\Block\Product\Renderer\Listing\Configurable" name="product.tile.details.renderers.configurable" as="configurable" template="Magento_Swatches::product/listing/renderer.phtml" ifconfig="catalog/frontend/show_swatches_in_product_list" />
                                <block class="Magento\Framework\View\Element\Template" name="product.tile.details.renderers.default" as="default" />
                            </block>
                        </block>
                    </block>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.name">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__name</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Container"
                               name="product.tile.container.name.link" 
                               template="MageSuite_ProductTile::container_linked.phtml"
                        >
                            <arguments>
                                <argument xsi:type="string" name="css_class">cs-grid-product__name-link</argument>
                            </arguments>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                   name="product.tile.name" 
                                   template="MageSuite_ProductTile::fragments/name.phtml"
                            />
                        </block>
                    </block>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.price.wrapper">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__price</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                               name="product.tile.price"
                               template="MageSuite_ProductTile::fragments/price.phtml"
                        />
                        <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                               name="product.tile.daily-deal.old-price"
                               template="MageSuite_ProductTile::fragments/daily-deal/old_price.phtml"
                        />
                    </block>
                </block>

                <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addons">
                    <arguments>
                        <argument xsi:type="string" name="html_tag">div</argument>
                        <argument xsi:type="string" name="css_class">cs-grid-product__addons</argument>
                    </arguments>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addons.top">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__addons-top</argument>
                        </arguments>
                    </block>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addons.left">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__addons-left</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.rating">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">div</argument>
                                <argument xsi:type="string" name="css_class">cs-grid-product__addon cs-grid-product__addon--rating</argument>
                            </arguments>
                            <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                   name="product.tile.review_summary"
                                   template="MageSuite_ProductTile::fragments/review_summary.phtml">
                                <arguments>
                                    <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Review</argument>
                                </arguments>
                            </block>
                        </block>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.addtolinks.list">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">ul</argument>
                                <argument xsi:type="string" name="css_class">cs-links-block-addto</argument>
                            </arguments>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addon.addtowishlist">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-links-block-addto__item cs-links-block-addto__item--wishlist</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                       name="product.tile.addtolinks.addtowishlist"
                                       template="MageSuite_ProductTile::fragments/add-to/wishlist.phtml">
                                    <arguments>
                                        <argument xsi:type="string" name="label" translate="true">Add to Wishlist</argument>
                                    </arguments>
                                    <block class="MageSuite\ThemeHelpers\Block\Icon" name="product.tile.addtolinks.addtowishlist.icon">
                                        <arguments>
                                            <argument name="icon_url" xsi:type="string">images/icons/heart.svg</argument>
                                            <argument name="css_class" xsi:type="string">cs-links-block-addto__icon cs-links-block-addto__icon--wishlist</argument>
                                            <argument name="inlined" xsi:type="boolean">true</argument>
                                            <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                        </arguments>
                                    </block>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addon.addtocompare">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">li</argument>
                                    <argument xsi:type="string" name="css_class">cs-links-block-addto__item cs-links-block-addto__item--compare</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment\AddTo\Compare"
                                       name="product.tile.addtolinks.addtocompare"
                                       template="MageSuite_ProductTile::fragments/add-to/compare.phtml">
                                    <arguments>
                                        <argument xsi:type="string" name="label" translate="true">Add to Compare</argument>
                                    </arguments>
                                    <block class="MageSuite\ThemeHelpers\Block\Icon" name="product.tile.addtolinks.addtocompare.icon">
                                        <arguments>
                                            <argument name="icon_url" xsi:type="string">images/icons/compare.svg</argument>
                                            <argument name="css_class" xsi:type="string">cs-links-block-addto__icon cs-links-block-addto__icon--compare</argument>
                                            <argument name="inlined" xsi:type="boolean">true</argument>
                                            <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                        </arguments>
                                    </block>
                                </block>
                            </block>
                        </block>
                    </block>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addons.right">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__addons-right</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                               name="product.tile.stock"
                               template="MageSuite_ProductTile::fragments/stock.phtml">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">div</argument>
                                <argument xsi:type="string" name="css_class">cs-grid-product__addon</argument>
                                <argument xsi:type="string" name="in_stock_css_modifier">cs-grid-product__addon--in-stock</argument>
                                <argument xsi:type="string" name="out_of_stock_css_modifier">cs-grid-product__addon--out-of-stock</argument>
                                <argument xsi:type="string" name="in_stock_label" translate="true">In stock</argument>
                                <argument xsi:type="string" name="out_of_stock_label" translate="true">Out of stock</argument>
                                <!-- @TODO: icon -->
                                <argument xsi:type="string" name="icon_path"></argument>
                            </arguments>
                        </block>
                    </block>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addons.bottom">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-grid-product__addons-bottom</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                               name="product.tile.addtocart"
                               template="MageSuite_ProductTile::fragments/add-to/cart.phtml">
                            <arguments>
                                <argument xsi:type="boolean" name="show_only_for_simple_products">false</argument>
                                <argument xsi:type="string" name="form_class">cs-addtocart</argument>
                            </arguments>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment"
                                   name="product.tile.addtocart.button"
                                   template="Magento_Catalog::addtocart/button.phtml"
                                   as="atc.button">
                                <arguments>
                                    <argument xsi:type="string" name="button_class">cs-addtocart__button</argument>
                                    <argument xsi:type="string" name="button_label_class">cs-addtocart__button-label</argument>
                                    <argument xsi:type="string" name="addtocart_label" translate="true">Add to Cart</argument>
                                    <argument xsi:type="string" name="addtocart_success_overlay_class" translate="true">cs-addtocart__feedback-bg</argument>
                                    <argument xsi:type="string" name="addtocart_success_label_class" translate="true">cs-addtocart__success-label</argument>
                                    <argument xsi:type="string" name="addtocart_success_label" translate="true">Thank you!</argument>
                                    <argument xsi:type="string" name="addtocart_fail_label_class" translate="true">cs-addtocart__fail-label</argument>
                                    <argument xsi:type="string" name="addtocart_fail_label" translate="true">Something went wrong</argument>
                                    <argument xsi:type="string" name="configure_label" translate="true">Configure</argument>
                                </arguments>

                                <block class="Magento\Framework\View\Element\Template"
                                   name="product.tile.addtocart.loading_indicator"
                                   template="Magento_Catalog::addtocart/loading-indicator.phtml"
                                   as="atc.loading.indicator" />

                                <block class="MageSuite\ThemeHelpers\Block\Icon" 
                                       name="product.tile.addtocart.icon"
                                       as="atc.button.icon">
                                    <arguments>
                                        <argument name="icon_url" xsi:type="string">images/icons/cart.svg</argument>
                                        <argument name="css_class" xsi:type="string">cs-addtocart__button-icon</argument>
                                        <argument name="inlined" xsi:type="boolean">true</argument>
                                        <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                    </arguments>
                                </block>

                                <block class="MageSuite\ThemeHelpers\Block\Icon" 
                                       name="product.tile.addtocart.success_icon"
                                       as="atc.success.icon">
                                    <arguments>
                                        <argument name="icon_url" xsi:type="string">images/icons/button-check.svg</argument>
                                        <argument name="css_class" xsi:type="string">cs-addtocart__success-icon</argument>
                                        <argument name="inlined" xsi:type="boolean">true</argument>
                                        <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                    </arguments>
                                </block>

                                <block class="MageSuite\ThemeHelpers\Block\Icon" 
                                       name="product.tile.addtocart.fail_icon"
                                       as="atc.fail.icon">
                                    <arguments>
                                        <argument name="icon_url" xsi:type="string">images/icons/button-error.svg</argument>
                                        <argument name="css_class" xsi:type="string">cs-addtocart__fail-icon</argument>
                                        <argument name="inlined" xsi:type="boolean">true</argument>
                                        <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                    </arguments>
                                </block>
                            </block>
                        </block>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
